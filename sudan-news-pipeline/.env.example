# Database Configuration
DATABASE_URL=sqlite:///news_aggregator.db

# API Keys
GOOGLE_API_KEY=your_google_genai_api_key_here  # Backward compatibility
GOOGLE_API_KEY_1=your_google_genai_api_key_1_here
GOOGLE_API_KEY_2=your_google_genai_api_key_2_here
GOOGLE_API_KEY_3=your_google_genai_api_key_3_here
GOOGLE_API_KEY_4=your_google_genai_api_key_4_here
HF_TOKEN=your_huggingface_token_here

# Model Configuration
EMBEDDING_MODEL=google/embeddinggemma-300m
NLP_MODEL=gemma-3-27b-it

# Clustering Parameters
SIMILARITY_THRESHOLD=0.5
TIME_WINDOW_HOURS=72
MAX_ARTICLES_PER_CLUSTER=50

# Pipeline Settings
BATCH_SIZE=10
MAX_RETRIES=3
REQUEST_TIMEOUT=15

# Scheduler Settings
SCHEDULER_INTERVAL_HOURS=6

# Timezone Configuration
APP_TIMEZONE=Africa/Khartoum

# Logging
LOG_LEVEL=INFO
LOG_FILE=pipeline.log

# Concurrency Control
LOCK_FILE=pipeline.lock
